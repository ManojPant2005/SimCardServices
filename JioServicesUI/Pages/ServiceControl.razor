




@page "/service-control"

@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Service Control</h3>

<button @onclick="StartService">Start Service</button>
<button @onclick="StopService">Stop Service</button>

<p>@statusMessage</p>

@code {
    private string statusMessage;

    private async Task StartService()
    {
        var response = await Http.PostAsync("https://localhost:7231/api/Service/start", null);
        statusMessage = await response.Content.ReadAsStringAsync();
    }

    private async Task StopService()
    {
        var response = await Http.PostAsync("https://localhost:7231/api/Service/stop", null);
        statusMessage = await response.Content.ReadAsStringAsync();
    }
}
 